" MY VIMRC.

" Line number.
set number
set relativenumber

"Tabs.
set tabstop=4
set softtabstop=4
set expandtab

" Move vertically by visual line.
nnoremap j gj
nnoremap k gk

" Themes.
let g:molokai_original = 1


" cursorline.
set cursorline

" Sets
" Vimrc in folder.
set exrc

"Save in buffer.
set hidden

set noswapfile
set nobackup
set undodir=/.vim/undodir
set undofile
set incsearch
set scrolloff=8
set hlsearch



